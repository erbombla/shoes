<h2> Brand Management </h2>
<br>

<h3> Saved Brands </h3>
<% if @all_brands.any? %>
<ul>
  <% @all_brands.each do |brand| %>
    <li><a href = "/brand_info/brand_form/<%= brand.id %>"><%= brand.name %></a></li>
</ul>
  <% end %>
    <p><span class="text-warning"> No Saved Brands <span></p>
  <% end %>

<h3> Add New Brand </h3>
<form action="/brand_info/create_brand" method="post">
  <div class="form-group row">
    <label for="name_input" class="col-xs-2 col-form-label">Name of Brand</label>
    <div class="col-xs-10">
      <input class="form-control" type="text" id="name_input" name="name_input">
    </div>
  </div>
  <button type="submit" class="btn btn-success">Add</button>
</form>

<a href="/" class="btn btn-info">Home</a>
