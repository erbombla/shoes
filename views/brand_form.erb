<h2> Edit Brand <%= @current_brand.name %></h2>
<hr>

<form action="/client" method="post">
  <div class="form-group row">
    <label for="client_first_name"class="col-xs-2 col-form-label">First Name</label>
    <div class="col-xs-10">
      <input class="form-control" type="text" value="First Name" id="client_first_name" name="client_first_name">
    </div>
  </div>
  <div class="form-group row">
    <label for="client_last_name" class="col-xs-2 col-form-label">Last Name</label>
    <div class="col-xs-10">
      <input class="form-control" type="text" value="Last Name" id="client_last_name" name="client_last_name">
    </div>
  </div>
  <div class="form-group row">
    <label for="stylist_id" class="col-xs-2 col-form-label">Assign Stylist</label>
    <div class="col-xs-10" "span">
      <select id='stylist' name='stylist_id' type='text'>
        <% @stylists.each() do |stylist| %>
          <option value="<%= stylist.id()%>"> <%= stylist.first_name() %> <%= stylist.last_name() %> </option>
        <% end %>
      </select>
    </div>
  </div>
  <button type="submit" class="btn btn-success">Submit</button>
</form>
