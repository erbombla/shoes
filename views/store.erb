<h2><span class ="text-info"><%= @current_store.name %> </span></h2>
<hr>

<h4> Current Stock </h4>
<% if @current_store_brands.any? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Style No.</th>
      <th>Size</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
     <tr>
       <% @current_store_brands.each do |brand| %>
       <td><%= brand.name %></td>
     </tr>
   <% end %>
 </tbody>
</table>
    <% else %>
      <p><span class="text-danger">No Saved Data</span></p>
    <% end %>

  <% if @all_brands.any? %>
  <h3> Add New </h3>
  <form action="/add_brand/<%= @current_store.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class="form-group row">
      <label for ="added_brand" class="col-xs-2 col-form-label"> Brand</label>
      <div class="col-xs-10">
        <select class="form-control" name="added_brand" id="added_brand">
            <% @all_brands.each do |brand| %>
              <option value="<%= brand.id %>"><%= brand.name %></option>
            <% end %>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="name_input" class="col-xs-2 col-form-label">Style No.</label>
      <div class="col-xs-10">
        <input class="form-control" type="text" id="name_input" name="name_input">
      </div>
    </div>
    <div class="form-group row">
      <label for="name_input" class="col-xs-2 col-form-label">Size</label>
      <div class="col-xs-10">
        <input class="form-control" type="text" id="name_input" name="name_input">
      </div>
    </div>
    <div class="form-group row">
      <label for="name_input" class="col-xs-2 col-form-label">Price</label>
      <div class="col-xs-10">
        <input class="form-control" type="text" id="name_input" name="name_input">
      </div>
    </div>
    <button type="submit" class="btn btn-success">Add</button>
  </form>
<% end %>
<br>
<br>
<a href="/" class="btn btn-info">Home</a>
